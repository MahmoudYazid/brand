<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".dependancyInjection.ApplicationDaggerHilt"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Brand"
        tools:targetApi="31">
        <activity
            android:name=".view.ShoppingCart"
            android:exported="false"
            android:label="@string/title_activity_shopping_cart"
            android:theme="@style/Theme.Brand" />
        <activity
            android:name=".view.SearchActivity"
            android:exported="false"
            android:label="@string/title_activity_search"
            android:theme="@style/Theme.Brand" />
        <activity
            android:name=".view.Details"
            android:exported="false"
            android:label="@string/title_activity_details"
            android:theme="@style/Theme.Brand" />
        <activity
            android:name=".view.CategoryActivity"
            android:exported="false"
            android:label="@string/title_activity_category"
            android:theme="@style/Theme.Brand" />
        <activity
            android:name=".view.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Brand">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>